    <title>Schedule a Mail</title>
</head>
<body>

    <nav class="navbar  navbar-expand-sm  navigationBar container-fluid">

        <ul class="navbar-nav ml-auto ">
            <li class="nav-item "><a class="nav-link" href="/home">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/history">History</a></li>
            <li class="nav-item"><a class="nav-link" href="/">Login/SignUp</a></li>
        </ul>  
    
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-12 justify-content-center text-center">
                <h2 class="heading">Schedule a Mail</h2>
            </div>
        </div>
<!--  -->

        <div class="row">
            <div class="col-12">
                <form action="/mail" method="POST" role="form">
                    <div class="form-group">
                        <input type="email" name="to" id="to" class="form-control" placeholder="To" value="">
                    </div>
                    <div class="form-group">
                        <input type="email" name="cc" id="cc" class="form-control" placeholder="CC" value="">
                    </div>
                    <div class="form-group">
                        <input type="text" name="subject" id="subject" class="form-control" placeholder="Subject" value="">
                    </div>
                    <div class="form-group">

                        
        <div class="quill-wrap">
            <!-- Create the toolbar container -->
            <div id="toolbar">
                  <span class="ql-formats">
                    <select class="ql-header">
                      <option value="1">Heading</option>
                      <option value="2">Subheading</option>
                      <option selected>Normal</option>
                    </select>
                    <select class="ql-font">
                      <option selected>Sans Serif</option>
                      <option value="serif">Serif</option>
                      <option value="monospace">Monospace</option>
                    </select>
                  </span>
                  <span class="ql-formats">
                    <button class="ql-bold"></button>
                    <button class="ql-italic"></button>
                    <button class="ql-underline"></button>
                    <button class="ql-strike"></button>
                  </span>
                  <span class="ql-formats">
                    <select class="ql-color"></select>
                    <select class="ql-background"></select>
                  </span>
                  <span class="ql-formats">
                    <button class="ql-list" value="ordered"></button>
                    <button class="ql-list" value="bullet"></button>
                    <select class="ql-align">
                      <option selected></option>
                      <option value="center"></option>
                      <option value="right"></option>
                      <option value="justify"></option>
                    </select>
                  </span>
                  <span class="ql-formats">
                    <button class="ql-blockquote"></button>
                    <button class="ql-link"></button>
                    <button class="ql-image"></button>
                    <button class="ql-code-block"></button>
                    <button class="ql-video"></button>
                  </span>
                  <span class="ql-formats">
                    <button class="ql-clean"></button>
                  </span>
            </div>
    

                        <div required class="form-control" name="body" id="editor" style="height: 300px;"></div>
                    
                    </div>
                    <div class="form-group justify-content-center text-center">
                        <h5 class="text-center">Select the Schedule</h5>
                        <label class="radio-inline" onclick="recurr()"> 
                            <input type="radio" name="scheduletype" value="recuring">Recurring Schedule
                          </label>
                          <label class="radio-inline" onclick="week()">
                            <input type="radio" name="scheduletype" value="weekly" >Weekly Schedule
                          </label>
                          <label class="radio-inline" onclick="month()">
                            <input type="radio" name="scheduletype" value="monthly" >Monthly Schedule
                          </label>
                          <label class="radio-inline" onclick="year()">
                            <input type="radio" name="scheduletype" value="yearly" >Yearly Schedule
                          </label>
                        
                    </div>
                    <div id="week" style="display: none;">
                        <div class="form-group justify-content-center text-center">
                            <h5 class="text-center">Select the Day</h5>
                            <label class="radio-inline"> 
                                <input type="radio" name="day" value="1">Monday
                              </label>
                              <label class="radio-inline" >
                                <input type="radio" name="day" value="2" >Tuesday
                              </label>
                              <label class="radio-inline" >
                                <input type="radio" name="day" value="3" >Wednesday
                              </label>
                              <label class="radio-inline" >
                                <input type="radio" name="day" value="4" >Thursday
                              </label>
                              <label class="radio-inline" >
                                <input type="radio" name="day" value="5" >Friday
                              </label>
                              <label class="radio-inline" >
                                <input type="radio" name="day" value="6" >Saturday
                              </label>
                              <label class="radio-inline" >
                                <input type="radio" name="day" value="7" >Sunday
                              </label>
                            
                        </div>
                        <div class="form-group">
                            <input type="time" name="time" id="time" class="form-control">
                        </div>
                        
                    </div>
                    <div id="month" style="display: none;">
                        <div class="form-group">
                            <input type="date" name="date" id="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="time" name="time" id="time" class="form-control">
                        </div>
                        
                    </div>
                    <div id="year" style="display: none;">
                        <div class="form-group">
                            <input type="date" name="date" id="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="time" name="time" id="time" class="form-control">
                        </div>
                        
                    </div>

                    <div class="form-group" style="background-color:rgb(248, 155, 155);">
                        <input type="submit" name="send-mail" id="send-mail" class="form-control btn" value="Send Mail">
                    </div>

                    

                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>

    <script>
        function week(){
        document.getElementById("week").style.display="block";
        document.getElementById("month").style.display="none";
        document.getElementById("year").style.display="none";
        }
        function month(){
        document.getElementById("week").style.display="none";
        document.getElementById("month").style.display="block";
        document.getElementById("year").style.display="none";
        }
        function year(){
        document.getElementById("week").style.display="none";
        document.getElementById("month").style.display="none";
        document.getElementById("year").style.display="block";
        }
        function recurr(){
        document.getElementById("week").style.display="none";
        document.getElementById("month").style.display="none";
        document.getElementById("year").style.display="none";
        }

        var editor = new Quill('#editor', {
        modules: { toolbar: '#toolbar' },
        theme: 'snow'
       });

    </script>
    

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
</body>
</html>